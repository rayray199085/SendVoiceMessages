<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="20dp"
              android:gravity="center"
              android:background="@drawable/dialog_loading_bg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/id_recorder_dialog_mic"
                   android:visibility="visible"
                   android:src="@drawable/recorder"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/v1"
                   android:visibility="visible"
                   android:id="@+id/id_recorder_dialog_volume"
                   android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:gravity="center"
              android:layout_marginTop="5dp"
              android:textColor="#ffffffff"
              android:id="@+id/id_recorder_dialog_label"
              android:text="@string/str_recorder_recording"
              android:layout_height="wrap_content"/>

</LinearLayout>